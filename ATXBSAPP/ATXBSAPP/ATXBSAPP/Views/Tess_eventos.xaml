    <ListView x:Name="get_webinar" Header="" BackgroundColor="White" HasUnevenRows="True" IsPullToRefreshEnabled="True" RefreshCommand="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid Padding="10" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.4*" />
                            <RowDefinition Height="0.3*" />
                            <RowDefinition Height="0.3*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions >
                        <!--<Image Grid.RowSpan="2" Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="60" WidthRequest="60" />-->
                        <Label Grid.Row="0" Grid.ColumnSpan="2" Margin="20,0,20,0" Text="{Binding atx_name}" FontSize="Large" MaxLines="5"></Label>
                        <Label Grid.Row="1" HorizontalOptions="Center" Text="{Binding atx_fechadeinicio}" Margin="5,5,5,5" TextColor="#0067b0" FontSize="Medium" MaxLines="5"></Label>
                        <Label Grid.Row="1" HorizontalOptions="Center" Grid.Column="1" Text="{Binding atx_fechadefinalizacion}" Margin="5,5,5,5" TextColor="#0067b0" FontSize="Medium" MaxLines="5"></Label>
                        <!--<Label Grid.Row="1" Grid.ColumnSpan="2" VerticalOptions="CenterAndExpand" Margin="5,5,5,5" Text="{Binding atx_fechadeinicio} {Binding atx_fechadefinalizacion}" TextColor="Black" MaxLines="5"></Label>-->
                        <!--<Label Text="{Binding adx_releasedate}" TextColor="#2e86c1" Margin="0,3,0,3"></Label>-->

                        <Button Grid.Row="2" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand" Margin="5,5,5,5"  Text="Registrarse" CommandParameter="{Binding atx_linkderegistro}" Clicked="Mas_info_Clicked" TextColor="#1085c8" BackgroundColor="Transparent"/>

                        <!--<Label Text="{Binding new_linkpost}" TextColor="Blue" Margin="0,3,0,15">></Label>-->
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>

        <ListView.HeaderTemplate>
            <DataTemplate>
                <ContentView BackgroundColor="#0066cc">
                    <Label Margin="10" HorizontalOptions="CenterAndExpand" Text="Eventos" FontSize="Title" TextColor="White"/>
                </ContentView>
            </DataTemplate>
        </ListView.HeaderTemplate>
    </ListView>
